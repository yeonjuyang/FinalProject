<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.team1.workforest.admin.reservation.mapper.AdminCarResveMapper">
	
	<sql id="where">
		<if test="keyword!=null and keyword!=''">
			<if test="searchOption=='empNm'"> 
			AND 	
				E.EMP_NM  LIKE '%' || #{keyword} || '%'
			</if>
			<if test="searchOption=='resveCn'">
			AND
				R.RESVE_CN LIKE '%' || #{keyword} || '%'		
		   </if>
		</if>	
	</sql>
	
	<!-- 차량 예약 목록 불러오기 -->
	<select id="adminGetCarResveList" parameterType="map" resultType="carReservationVO">
		SELECT 
    				  R.CAR_RESVE_NO		<!-- 예약 번호 -->
	    			, R.CAR_NO				<!-- 차량 번호 -->
					, C.CAR_NM				<!-- 차량 이름 -->
					, R.EMP_NO				<!-- 사원 번호 -->	
	    			, R.RESVE_BEGIN_DATE	<!-- 예약 시작 일시 -->
	    			, R.RESVE_END_DATE		<!-- 예약 종료 일시 -->
	    			, R.RESVE_CN 			<!-- 예약 내용 -->
					, R.RTURN_CD			<!-- 반납 여부 -->
		FROM 
    				CAR_RESERVATION R INNER JOIN CAR C ON R.CAR_NO = C.CAR_NO		
    	WHERE
					R.RESVE_END_DATE>= SYSDATE
		ORDER BY
    				R.RESVE_BEGIN_DATE ASC
	</select>
	
	<!-- 반납 처리해야하는 차량 목록 불러오기 -->
	<select id="adminGetWaitReturnCarResveList" parameterType="map" resultType="carReservationVO">
		SELECT 
    				  R.CAR_RESVE_NO		<!-- 예약 번호 -->
	    			, R.CAR_NO				<!-- 차량 번호 -->
					, C.CAR_NM				<!-- 차량 이름 -->
					, R.EMP_NO				<!-- 사원 번호 -->	
	    			, R.RESVE_BEGIN_DATE	<!-- 예약 시작 일시 -->
	    			, R.RESVE_END_DATE		<!-- 예약 종료 일시 -->
	    			, R.RESVE_CN 			<!-- 예약 내용 -->
					, R.RTURN_CD			<!-- 반납 여부 -->
		FROM 
    				CAR_RESERVATION R INNER JOIN CAR C ON R.CAR_NO = C.CAR_NO		
    	WHERE
    				R.RTURN_CD = '2'
    	AND
					R.RESVE_END_DATE>= SYSDATE
		ORDER BY
    				R.RESVE_BEGIN_DATE ASC
	</select>
	
	
	<!-- 지난 차량 예약 목록 불러오기 -->
	<select id="adminGetPastCarResveList" parameterType="map" resultType="carReservationVO">
		SELECT 
    				  R.CAR_RESVE_NO		<!-- 예약 번호 -->
	    			, R.CAR_NO				<!-- 차량 번호 -->
					, C.CAR_NM				<!-- 차량 이름 -->	
					, R.EMP_NO				<!-- 사원 번호 -->
	    			, R.RESVE_BEGIN_DATE	<!-- 예약 시작 일시 -->
	    			, R.RESVE_END_DATE		<!-- 예약 종료 일시 -->
	    			, R.RESVE_CN 			<!-- 예약 내용 -->
					, R.RTURN_CD			<!-- 반납 여부 -->
		FROM 
    				CAR_RESERVATION R INNER JOIN CAR C ON R.CAR_NO = C.CAR_NO		
    	WHERE
					R.RESVE_BEGIN_DATE >= SYSDATE - 14 
        AND 
        			SYSDATE >= R.RESVE_BEGIN_DATE 
		ORDER BY
    				R.RESVE_END_DATE ASC
	</select>
	
</mapper>