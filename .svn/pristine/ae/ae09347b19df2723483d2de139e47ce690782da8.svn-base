@charset "UTF-8";
/*중간용*/
@font-face {
    font-family: 'Cafe24SsurroundAir';
    src: url('https://cdn.jsdelivr.net/gh/projectnoonnu/noonfonts_2105_2@1.0/Cafe24SsurroundAir.woff') format('woff');
    font-weight: normal;
    font-style: normal;
}

  
.weather {
    border: 1px solid #B0E0E6;
    background-color: #f2f9fa;
    opacity: 0.8;
    padding: 5px;
    margin: 20px;
    border-radius: 10px;
    text-align:center;
 
    height: 150px;
    width: 120px;
  /*   font-family: 'Cafe24SsurroundAir'; */
    line-height: normal;
    font-weight:bold;
    
    position: absolute;
    top: 20%;
    right:2%;
    transform: translate(10%, 60%);
    z-index: 2;
}

.weather_icon {
 	float:left;
    font-size: 16px; 
    margin-right: 4px;
    margin-top: 3px;
    line-height: 1.3;
    font-weight: 700;
}

.city{
    line-height: 1.2;
    margin:10px;
}

