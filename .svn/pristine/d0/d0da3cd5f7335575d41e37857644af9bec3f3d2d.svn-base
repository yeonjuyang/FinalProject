document.addEventListener("DOMContentLoaded", () => { 
//     dragCheckBox(".checkbox-td");
  //모든 체크박스를 선택하는 함수
    function allCheck(checkbox) {
        const checkboxes = document.querySelectorAll("input[type='checkbox'][name='checkbox']");
        checkboxes.forEach((cb) => {
            cb.checked = checkbox.checked;
        });
    }
    const checkboxes = document.querySelectorAll("input[type='checkbox'][name='checkbox']");
    checkboxes.forEach((cb) => {
        cb.addEventListener("click", () => {
            let allChecked = true;
            checkboxes.forEach((checkbox) => {
                if (!checkbox.checked) {
                    allChecked = false;
                }
            });
            document.querySelector(".chk1").checked = allChecked;
        });
    });

    // chk1 체크박스가 클릭되었을 때 모든 체크박스를 체크하도록 함
    document.querySelector("#chk1").addEventListener("click", (e) => {
        allCheck(e.target);
    });

    // chk1 체크박스가 해제되었을 때 모든 체크박스를 해제하도록 함
    document.querySelector("#chk1").addEventListener("change", (e) => {
        if (!e.target.checked) {
            checkboxes.forEach((checkbox) => {
                checkbox.checked = false;
            });
        }
    });

    // 다른 어떤 체크박스가 해제되었을 때 chk1도 해제되도록 함
    checkboxes.forEach((cb) => {
        cb.addEventListener("change", () => {
            let anyUnchecked = false;
            checkboxes.forEach((checkbox) => {
                if (!checkbox.checked) {
                    anyUnchecked = true;
                }
            });
            document.querySelector("#chk1").checked = !anyUnchecked;
        });
    });
});

// 드래그하여 체크박스를 토글하는 함수
function dragCheckBox(selector) {
    let isDragging = false;
    // 주어진 선택자에 해당하는 요소를 모두 반복하여 처리
    document.querySelectorAll(selector).forEach((element) => {
        // 해당 요소에서 체크박스를 찾음
        const target = element.querySelector("input[type='checkbox']");
        if (!target) return false;

        // 체크박스 클릭 시 기본 이벤트를 중지
        target.addEventListener("click", (e) => {
            e.preventDefault(); 
        });
      
        // 마우스를 누르고 드래그할 때
        element.addEventListener("mousedown", (e) => {
            e.preventDefault(); 
            isDragging = true;
            // 체크박스 상태를 토글
            target.checked = !target.checked; 
        });
  
        // 드래그하면서 요소에 진입할 때
        element.addEventListener("mouseenter", (e) => {
            // 드래그 중이 아니면 무시
            if (!isDragging) return false; 
            // 체크박스 상태를 토글
            target.checked = !target.checked; 
        });

        // 마우스 버튼을 놓을 때
        document.addEventListener("mouseup", (e) => {
            // 드래그 중지
            isDragging = false; 
        });
    });
}


</script>
