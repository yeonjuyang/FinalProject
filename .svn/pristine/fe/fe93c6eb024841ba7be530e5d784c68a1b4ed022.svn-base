// 결재 진행 (내 결재 업무)
function getProgressAll(tab) {

	const tab2 = $('[data-pro="tab2"]');

	$.ajax({
		url: `/approval/listView/progress/${tab}`,
		type: "GET",
		dataType: "json",
		success: function (result) {
			console.log("내 결재 업무 -> ", result);

			let length = result.length;

			const $tbody = tab2.find('tbody');
			$tbody.empty();

			if (Array.isArray(result) && result.length > 0) {
				result.forEach((e, i) => {

					let docType = docFormNo(e.docFormNo);

					let HTML = `
						<tr data-apv-no='${e.apvNo}'>
							<td>${i + 1}</td>
							<td>${docType}</td>
							<td>${e.apvSj}</td>
							<td>${e.empNm}</td>
							<td>${e.apvPosition}/${e.apvRspnsbl}</td>
							<td>${e.deptNm}</td>
							<td>${e.drftDate}</td>
						</tr>		
					`;

					tab2.find('tbody').append(HTML);
				});

				$('.type3-btn').find('.cnt').text(length);
			}
			else {
				let HTML = noDate();
				tab2.find('tbody').append(HTML);
			}
		}
	});
}


