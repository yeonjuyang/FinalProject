<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
<script type="text/javascript" src="/resources/js/jquery-3.7.0.min.js"></script>
<script type="text/javascript" src="/resources/js/stripe-gradient.js"></script>
<script type="text/javascript">
$(function(){
	
	$.ajax({
        url:"/mail/inboxAjax",
        type:"get",
        dataType:"json",
        contentType: "application/json; charset=utf-8",
        success:function(result){
            console.log("result : ", result);
            
            let str = "";
            
            //목록 초기화
            $("#emailList").html("");
            
            $.each(result.content,function(idx,emailVO){
                str += "<tr>";
                str += "<td>";
                str += "<span class='checkbox-radio-custom'> "; 
                str += "<input type='checkbox' name='checkbox' id='chk" + (idx + 2) + "'> ";
                str += "<label for='chk" + (idx + 2) + "'></label> ";
                str += "</span>";
                str += "</td>";
                str += "<td>";
                str += "<div class='wf-mail-button-wrap'> "; 
                str += "<button type='button'> ";
                str += "<i class='xi-mail-read'></i> ";
                str += "</button> ";
                str += "<button type='button'> ";
                str += "<i class='xi-attachment'></i> ";
                str += "</button> ";
                str += "</div> ";
                str += "</td> ";
                str += "<td> ";
                str += "<p>" + emailVO.senderEmplNo + "</p> ";
                str += "</td> ";
                str += "<td> ";
                str += "<p>" + emailVO.emailSj + "</p> ";
                str += "</td> ";
                str += "<td> ";
                str += "<p>" + emailVO.sendDate + "</p> ";
                str += "</td> ";
                str += "</tr>";
            });
            //마지막 자식 요소로 누적
            $("#emailList").append(str);
        }
    });
});
</script>	
<!-- =============== body 시작 =============== -->
