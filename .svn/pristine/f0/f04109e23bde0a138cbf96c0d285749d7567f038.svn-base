@charset "UTF-8";
#chart_div {
	width: 300px;
	height: 250px;
}

.align-center {
	text-align: center;
}

.wf-content-wrap {
	display: flex;
	flex-direction: column;
}

.attendance-box1 {
	width: 20%;
}

.attendance-box2 {
	width: 80%;
}

.attendance-box3 {
	margin-top: 30px;
	flex-direction: column;
}

header {
	flex-direction: row;
}

.attendanceBtn-container {
	text-align: center;
}

.attendanceBtn-container button {
	margin: 0px 10px;
}

.avgDiv {
	width: 180px;
	margin-left: 3%;
}

.avgBadgeDiv {
	margin-left: 10px;
}
.avgBadgeDiv p{
	height: 20px;
}
.weekDayDiv {
	margin-left: 4%;
