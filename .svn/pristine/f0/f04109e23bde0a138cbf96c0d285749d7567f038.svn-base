	height: 200px;
	text-align: center;
}

.weekDayGraph {
	height: 150px;
	margin-top: 20px;
	width: 20px;
	margin-left: 15px;
	border-radius: 4px;
}
.weekDay2Span{
	width: 250px;
}

.monthDayDiv {
	margin-left: 2.7px;
	width: 30px;
	height: 200px;
	text-align: center;
}

.monthDayGraph {
	height: 150px;
	margin: 20px auto 0px;
	width: 20px;
	border-radius: 4px;
}
