    }

    /* 일정 상세 모달 불러오기 */
    function showEventDetails(event) {
        console.log("Event clicked:", event);

        let fommatedStartDate = formatDate(event.event.start);
        let fommatedEndDate = formatDate(event.event.end);
        $("#schDName").val(event.event.title);
        $("#schSDateandTime").val(fommatedStartDate);
        $("#schEDateandTime").val(fommatedEndDate);
        $("#schDLoc").val(event.event.extendedProps.location);
        $("#schDCont").val(event.event.extendedProps.content);
        $("#schDetailModal").addClass("open");
    }
    /* 시작일시, 종료일시 포맷 */
    function formatDate(date) {
        const year = date.getFullYear();
        const month = String(date.getMonth() + 1).padStart(2, "0");
        const day = String(date.getDate()).padStart(2, "0");
        const hours = String(date.getHours()).padStart(2, "0");
        const minutes = String(date.getMinutes()).padStart(2, "0");
        const seconds = String(date.getSeconds()).padStart(2, "0");

        return `${year}-${month}-${day} ${hours}:${minutes}:${seconds}`;
    }

    /* 일정 등록 버튼 누르면 등록 실행 */
    $("#createBtn").on("click", function () {
