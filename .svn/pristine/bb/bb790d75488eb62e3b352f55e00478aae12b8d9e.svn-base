                            <col style="width: 10%" />
                            <col style="width: 10%" />
                            <col style="width: 10%" />
                            <col style="width: 15%" />
                            <col style="width: 20%" />
                            <col style="width: 10%" />
                        </colgroup>
                        <thead>
                            <tr>
                                <th>
                                    <span class="checkbox-radio-custom">
                                        <input type="checkbox" name="checkbox" id="mtrAllChk" />
